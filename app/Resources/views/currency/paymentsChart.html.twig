{% extends "base.html.twig" %}

{% block body %}
    {% include 'currency/userBlock.html.twig' %}
    {% include 'currency/menu.html.twig' %}
    <!-- remember to give width and height to your graph containers -->
    <h2>Payments chart</h2>
    <div id="chart"></div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script>
        var objChart = JSON.parse('{{ jsonPaymentsChart|raw }}');
        var chart = Object.keys(objChart).map(function(key) {
            return [Number(key) + ' Квартал', objChart[key], '#4747ec'];
        });
    </script>
    <script type="text/javascript" src="{{ asset('assets/js/paymentChart.js') }}"></script>
{% endblock %}