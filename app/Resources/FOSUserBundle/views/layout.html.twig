{% extends "homepage.html.twig" %}

{% block body %}
    <div class="main-block">
        <h1>SimpleTax&beta;</h1>
        <div class="btn-block">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <script>window.location.href = "{{ path('payments_history') }}"</script>
                <div class="cmt-card">
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    <a href="{{ path('payments_history') }}">
                        Home Page
                    </a>
                    <br>
                    <a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                    </a>
                </div>
            {% else %}
                {% include ":security:signup.html.twig" %}
            {% endif %}
        </div>


        <div class="form-block col-lg-4">
            {% for type, messages in app.session.flashBag.all %}
                {% for message in messages %}
                    <div class="{{ type }}">
                        {{ message|trans({}, 'FOSUserBundle') }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>

        $('#_submit').addClass('btn btn-default').css('display', 'block');

        $.each($('form input[type="text"], form input[type="password"], form input[type="email"]'), function () {
            $(this).addClass('form-control');
            $(this).css('margin-bottom', '15px');
        });

        //        $('form').addClass('form');
    </script>
{% endblock %}